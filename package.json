{
  "name": "ng-webpack",
  "version": "1.0.0",
  "description": "Angular4 with Webpack",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack app/src/javascript/app.js app/dist/js/main.js",
    "build:prod": "webpack app/src/javascript/app.js app/dist/js/main.js -p",
    "start:dev": "webpack-dev-server --port 8000 --content-base ./app --entry ./app/src/javascript/app.js --output-filename ./dist/js/main.js"
  },
